<div class="mt-4 ml-5 mr-5">
    <div class="row">
        <h3>Order ID: #{{order._id}}</h3>
        <div class="col-lg-12">
            <div class="card-body card-product border">
                <p class="card-text">Email: {{order.email}}</p>
                <p class="card-text">Phone: {{order.phone}}</p>
                <p class="card-text">Shipping address: {{order.shippingAddress}}</p>
                <p class="card-text">Note: {{order.note}}</p>
                <p class="card-text">Total price: {{formatCurrency order.total}}</p>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="card-body card-product border">
                <table class="table mt-5">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Thumbnail</th>
                            <th scope="col">Item</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each order.items}}
                        <tr>
                            <th scope="row">{{sum @index 1}}</th>
                            <td>
                                <a href="/product/{{this.slug}}" class="btn btn-link">
                                    <img class="product-thumbnail" src={{this.thumbnail}}>
                                </a>
                            </td>
                            <td><a href="/product/{{this.slug}}" class="btn btn-link">{{this.name}}</a>
                            </td>
                            <td>{{formatCurrency this.price}}</td>
                            <td>{{this.quantity}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>