<div class="mt-4 ml-5 mr-5">
    <div class="row">
        <h3>My orders</h3>
        <div class="col-lg-12">
            <div class="card-body card-product border">
                <table class="table mt-5">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Total price</th>
                            <th scope="col">Order at</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                        <tr>
                            <th scope="row">
                                <a href="/order/{{this._id}}" class="btn btn-link">
                                    {{this._id}}
                                </a>
                            </th>
                            <td>{{formatCurrency this.total}}</td>
                            <td>{{this.createdAt}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>