<div class="mt4">
    <div class="row">

        {{#each products}}
        <div class="col-sm-6 col-lg-3" style="border border-dark">
            <div class="card-body card-product border">
                <div class="form-group">
                    <a href="/product/{{this.slug}}">
                        <img class="card-img-top" src="{{this.thumbnail}}" alt="{{this.name}}">
                    </a>
                </div>
                <div class="form-group">
                    <a href="/product/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">Price: {{formatCurrency this.price}}</p>
                    <p class="card-text">Stock: {{this.quantity}}</p>
                    {{#if this.quantity}}
                    <a href="/cart/add_to_cart/{{this.slug}}" class="btn btn-primary btn-block">Add to cart</a>
                    {{else}}
                    <button class="btn btn-secondary btn-block" disabled>Out of stock</button>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>