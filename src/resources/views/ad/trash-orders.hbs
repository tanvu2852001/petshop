<div class="mt-4 ml-5 mr-5">
    <div class="row">
        <h3>List orders</h3>
        <a href="/ad/trash/orders">Temporary trash can</a>
        <div class="col-lg-12">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Total price</th>
                        <th scope="col">Order at</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <th scope="row">
                            <a href="/ad/stored-orders/{{this._id}}" class="btn btn-link">
                                {{this._id}}
                            </a>
                        </th>
                        <td>{{formatCurrency this.total}}</td>
                        <td>{{this.createdAt}}</td>
                        <td>
                            <a href="/ad/trash/orders/{{this._id}}/restore" class="btn btn-link btn-restore">Restore</a>
                            <a href="/ad/trash/orders//{{this._id}}/permanent-delete" class="btn btn-link" onclick="alert('Do you want to permanently delete this order?')">Permanently deleted</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>